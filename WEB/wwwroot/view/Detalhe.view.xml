<mvc:View
    height="100%"
    controllerName="PedroAutoPecas.controller.Detalhe"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
    <Page title="{i18n>TituloDeDetalhe}" showNavButton="true" navButtonPress=".onNavBack">

        <Toolbar>
            <ToolbarSpacer/>
            <Button text="Editar" type="Transparent"/>
            <Button text="Remover" type="Transparent"/>
        </Toolbar>
        
        <Title text="{Detalhe>/nome}" />
        <ToolbarSpacer/>
        <ToolbarSpacer/>
        <Text text="{Detalhe>/descricao}" />
        <ToolbarSpacer/>
        <ToolbarSpacer/>
        <Text text="{Detalhe>/categoria}" />
        <ToolbarSpacer/>
        <ToolbarSpacer/>
        <Text
            text="{
                path: 'Detalhe>/dataDeFabricacao',
                type: 'sap.ui.model.type.Date',
                formatOptions: {
                style: 'short',
                    source: {
                        pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'
                    }
                }
            }" />
            <ToolbarSpacer/>
            <ToolbarSpacer/>
    </Page>
</mvc:View>
