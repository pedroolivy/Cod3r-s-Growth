<mvc:View
	height="100%"
	controllerName="PedroAutoPecas.controller.ListaDePecas"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
    <Page
        showHeader="false"
        enableScrolling="true"
        class="sapUiContentPadding"
        showNavButton="false" >
        <content>
            <Table
                id="idProductsTable"
                items="{pecas>/}">
                <headerToolbar>
                    <OverflowToolbar id="otbSubheader">
                        <OverflowToolbarButton tooltip="Add" text="Add" icon="sap-icon://add"/>
                        <ToolbarSpacer/>
                        <SearchField ariaLabelledBy="text1" id="maxPrice" liveChange="onFilter">
                            <layoutData><OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="NeverOverflow"/></layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em"><Text text="Nome" /></Column>
                    <Column width="12em"><Text text="Descrição" /></Column>
                    <Column width="12em"><Text text="Categoria" /></Column>
                    <Column width="12em"><Text text="Data de Fabricação" /></Column>
                    <Column width="12em"><Text text="Estoque" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{pecas>nome}" />
                            <Text text="{pecas>descricao}" />
                            <Text text="{pecas>categoria}" />
                            <Text text="{pecas>dataDeFabricacao}" />
                            <Text text="{pecas>estoque}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
