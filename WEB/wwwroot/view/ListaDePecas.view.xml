<mvc:View
	height="100%"
	controllerName="PedroAutoPecas.controller.ListaDePecas"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
    <Page
        showHeader="false"
        enableScrolling="true"
        showNavButton="false">
        <content>
            <Table 
                id="idProductsTable"
                items="{peca>/}">               
                <headerToolbar>
                    <OverflowToolbar  id="otbSubheader">
                        <Title text="{i18n>TituloDaLista}"/>
                        <ToolbarSpacer/>
                         <OverflowToolbarButton tooltip="Adicionar" text="Add" icon="sap-icon://add-equipment" type="Accept" />
                        <SearchField ariaLabelledBy="text1" id="maxPrice" liveChange="onFilter">
                            <layoutData><OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="NeverOverflow"/></layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em"><Text text="{i18n>ColunaNome}" /></Column>
                    <Column width="12em"><Text text="{i18n>ColunaDescricao}" /></Column>
                    <Column width="12em"><Text text="{i18n>ColunaCategoria}" /></Column>
                    <Column width="12em"><Text text="{i18n>ColunaDataDeFabricacao}" /></Column>
                    <Column width="12em"><Text text="{i18n>ColunaEstoque}" /></Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="aoClicar">
                        <cells>
                            <Text text="{peca>nome}" />
                            <Text text="{peca>descricao}" />
                            <Text text="{peca>categoria}" />
                            <Text
                                text="{
                                    path: 'peca>dataDeFabricacao',
                                    type: 'sap.ui.model.type.Date',
                                    formatOptions: {
                                    style: 'short',
                                        source: {
                                            pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'
                                        }
                                    }
                                }" />
                            <Text text="{peca>estoque}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
