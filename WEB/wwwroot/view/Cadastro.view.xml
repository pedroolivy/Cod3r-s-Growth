<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
    controllerName="PedroAutoPecas.controller.Cadastro">
    <Page 
        showHeader="true" 
        enableScrolling="true" 
        showNavButton="true"
        navButtonPress=".aoClicarVoltar" 
        title="Cadastro" 
        titleAlignment="Center">
        <headerContent>
            <Button text="{i18n>botaoSalvar}" icon="sap-icon://add" width="auto" type="Accept" press="aoClicarSalvar"/>
            <Button text="{i18n>botaoCancelar}" icon="sap-icon://decline" width="auto" type="Reject" press="aoClicarCancelar"/>
        </headerContent>
        <VBox class="sapUiSmallMargin">
            <l:VerticalLayout class="sapUiContentPadding" width="50%">
                <Label text="Nome" />
                <Input id="inputNome" value="{pecas>/nome}"/>
                <Label text="Descrição" />
                <Input id="input-descricao" />
                <Label text="Categoria" />
                <Input id="input-categoria" />
                <Label text="Data de Fabricação"/>
                <Input id="input-dataDeFabricacao" />
                <Label text="Estoque" />
                <Input id="input-estoque" />
            </l:VerticalLayout>
        </VBox>
    </Page>
</mvc:View>
