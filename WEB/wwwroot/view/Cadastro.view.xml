<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
    controllerName="PedroAutoPecas.controller.Cadastro">
    <Page 
        showHeader="true" 
        enableScrolling="true" 
        showNavButton="true"
        navButtonPress=".aoClicarVoltar" 
        title="Cadastro" 
        titleAlignment="Center">
        <headerContent>
            <Button text="{i18n>botaoSalvar}" icon="sap-icon://add" width="auto" type="Accept"/>
            <Button text="{i18n>botaoCancelar}" icon="sap-icon://decline" width="auto" type="Reject"/>
        </headerContent>
        <VBox class="sapUiSmallMargin">
            <l:VerticalLayout class="sapUiContentPadding" width="50%">
                <Label text="Nome" labelFor="input-a" />
                <Input id="input-a" />
                <Label text="Descrição" labelFor="input-b" />
                <Input id="input-b" />
                <Label text="Categoria" labelFor="input-c" />
                <Input id="input-c" />
                <Label text="Data de Fabricação" labelFor="input-d" />
                <Input id="input-d" />
                <Label text="Estoque" labelFor="input-f" />
                <Input id="input-f" />
            </l:VerticalLayout>
        </VBox>
    </Page>
</mvc:View>
