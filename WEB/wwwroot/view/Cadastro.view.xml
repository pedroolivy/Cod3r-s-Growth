<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
    controllerName="PedroAutoPecas.controller.Cadastro">
    <Page 
        showHeader="true" 
        enableScrolling="true" 
        showNavButton="true"
        navButtonPress=".aoClicarVoltar" 
        title="{i18n>TituloCadastro}" 
        titleAlignment="Center">
        <headerContent>
            <Button text="{i18n>botaoSalvar}" icon="sap-icon://add" width="auto" type="Accept" press=".aoClicarSalvar"/>
            <Button text="{i18n>botaoCancelar}" icon="sap-icon://decline" width="auto" type="Reject" press="aoClicarCancelar"/>
        </headerContent>
        <VBox class="sapUiSmallMargin">
            <l:VerticalLayout class="sapUiContentPadding" width="50%">
                <Label text="{i18n>CampoNome}" />
                <Input 
                    value="{pecas>/nome}" 
                    placeholder="Nome de Peça"
                    valueStateText="Campo nome não pode estar vazio!"/>
                <Label text="{i18n>CampoDescricao}" />
                <Input 
                    value="{pecas>/descricao}" 
                    placeholder="Tipo de Peça"
                    valueStateText="Campo descrição não pode estar vazio!"/>
                <Label text="{i18n>CampoCategoria}" />
                <Input 
                    value="{pecas>/categoria}" 
                    placeholder="Categoria de Peça"
                    valueStateText="Campo categoria não pode estar vazio!"/>
                <Label text="{i18n>CampoDataDeFabricacao}"/>
                <DatePicker 
                    value="{pecas>/dataDeFabricacao}" 
                    valueFormat="yyyy-MM-ddTHH:mm:ss" 
                    placeholder="Dia/Mês/Ano"
                    valueStateText="Preencha campo data de fabricação corretamente!"/>
                <Label text="{i18n>CampoEstoque}" />
                <Input 
                    value="{pecas>/estoque}" 
                    placeholder="Quantidade de Peça"
                    valueStateText="Campo estoque sem valor!"/>
            </l:VerticalLayout>
        </VBox>
    </Page>
</mvc:View>
