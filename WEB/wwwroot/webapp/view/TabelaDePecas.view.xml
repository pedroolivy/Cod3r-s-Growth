<mvc:View
    controllerName="sap.ui.demo.CrudPecas.controller.TabelaDePecas"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Table class="sapUiResponsiveMargin" id="idTabelaDeProdutos" width="auto">
		<headerToolbar>
            <OverflowToolbar>
                <OverflowToolbarButton width="100px" icon="sap-icon://add-equipment"/>
                <ToolbarSpacer/>
                <SearchField id="acharPeca">
                    <layoutData>
                        <OverflowToolbarLayoutData maxWidth="200px"/>
                    </layoutData>
                </SearchField>
            </OverflowToolbar>
		</headerToolbar>
        <columns>
            <Column width="auto"><Text text="Nome" /></Column>
            <Column width="auto"><Text text="Descricao" /></Column>
            <Column width="auto"><Text text="Categoria" /></Column>
            <Column width="auto"><Text text="DatadeFabricação" /></Column>
            <Column width="auto"><Text text="Estoque" /></Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier title="{Name}" text="{ProductId}"/>
                        <Text text="{Nome}" />
                        <Text text="{Descricao}"/>
                        <Text text="{Categoria}"/>
                        <Text text="{DataDeFabricacao}"/>
                        <Text text="{Estoque}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>